# $Id$
# Maintainer: James Kittsmiller (AJSlye) <james@nulogicsystems.com>

pkgname=kcm-about-extended
pkgver=1.0
pkgrel=1
pkgdesc='Extended version of the about-distro module'
arch=('i686' 'x86_64')
url='https://github.com/ds9-extras/kcm-about-extended'
license=('LGPL')
groups=('ds9-extras')
depends=('qt5-base' 'networkmanager-qt' 'kcmutils' 'kdelibs4support' 'ki18n' 'kwin' 'solid' 'wayland')
makedepends=('git' 'extra-cmake-modules' 'kdoctools' 'python')
conflicts=('kdebase-workspace')
source=('git://github.com/ds9-extras/kcm-about-extended')
md5sums=('SKIP')

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake ../${pkgname} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=lib \
    -DKDE_INSTALL_USE_QT_SYS_PATHS=ON \
    -DBUILD_TESTING=OFF
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
